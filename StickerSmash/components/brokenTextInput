import React, {useState, Component} from "react";
import {StyleSheet, View, Button, TextInput, Text} from "react-native";

class OurTextInput extends Component{
    state = {
        text: "",
        typedText: ""
    }
    handlePress = () => {
        this.setState({typedText:this.state.text})
    };

    render() {
        return(
            <View> 
                <TextInput 
                    value = {this.state.text}
                    onChangeText={(newValue)=> this.setState({text:newValue})}
                    style = {styles.inputText} 
                    placeholder = {"Enter your event title"}
                    placeholderTextColor={"green"}
                />
                <Button title = "Submit title" onPress = {this.handlePress} color = "green" />
                <Text> You typed:{this.state.typedText}</Text>
            </View>
        )
    }
}

